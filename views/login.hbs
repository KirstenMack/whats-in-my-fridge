<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="google-signin-client_id"
        content="7142003137-m0qds4ukao168265tm0iae3fjpl1f4er.apps.googleusercontent.com">
    <link rel="stylesheet" href="stylesheets/login.css">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
</head>

<body>
    <form>
        <section class="login">
            <img id="homeImage" src="images/logo.svg" alt="Inside a Fridge">
            <div class="alert-success" id="success">User Logged in!</div>
            <div class="alert-danger" id="danger">Oops! something went wrong... Please contact support</div>
            <section class="login-card">
                <h1>Login</h1>
                <p>We'll be honest with you... Your data is important to us! That is why we have left the sign up
                    process to the professionals.</p>
                <div id="googleBtn" class="g-signin2" data-onsuccess="onSignIn"></div>
                <button onclick="signOut();">Sign out</button>
                <a id="redirect" href="/">Back to recipes</a>
            </section>
        </section>
    </form>
</body>

<script>

    function onSignIn(googleUser) {
        var profile = googleUser.getBasicProfile();
        var id_token = googleUser.getAuthResponse().id_token;
        var xhr = new XMLHttpRequest();
        xhr.open('POST', '/users/login');
        xhr.setRequestHeader('Content-Type', 'application/json');
        xhr.onload = () => {
            if (xhr.status === 200) {
                document.getElementById("success").style.display = "block";
                setTimeout(function () { window.location.href = '/'; }, 3000);
            }

            if (xhr.status === 401) {
                console.log(xhr.responseText);
                document.getElementById("danger").style.display = "block";
                signOut();
            }

        };

        xhr.send(JSON.stringify({ name: profile.getName(), email: profile.getEmail(), token: id_token }));
    }

    function signOut() {
        var auth2 = gapi.auth2.getAuthInstance();
        auth2.signOut().then(function () {
            console.log('User signed out.');
        });
    }



</script>


</script>

</html>